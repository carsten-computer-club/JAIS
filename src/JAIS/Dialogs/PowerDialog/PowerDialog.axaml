<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="JAIS.Dialogs.PowerDialog.PowerDialog">
    <StackPanel>
        <Label Classes="Title">Power Options</Label>

        <Button Click="RebootClicked">Reboot</Button>
        <Button Click="ShutdownClicked">Shutdown</Button>
        <Button Click="QuitGuiClicked">Quit GUI</Button>
        <Button Classes="Cancel" Click="CancelButtonClicked">Cancel</Button>
    </StackPanel>
</UserControl>
